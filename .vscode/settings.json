{
    // The Settings of Python
    "python.pythonPath": "/home/math2/Anaconda/envs/xugggg/bin/python",
    "python.autoComplete.addBrackets": true,
    "python.linting.flake8Args": [
        "--max-line-length=300"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "yapf",
    "python.linting.flake8Enabled": true,
    "python.analysis.useImportHeuristic": true,
    // The Settings of Code Runer
    "code-runner.executorMap": {
        "python": "$pythonPath $fullFileName",
    },
    "code-runner.runInTerminal": true,
    // The Settings of tokenColor
    "editor.tokenColorCustomizations": {
        "[GitHub Dark]": {
            "textMateRules": [
                {
                    "scope": [
                        "meta.function-call.generic.python"
                    ],
                    "settings": {
                        "foreground": "#B392F0"
                    }
                },
                {
                    "scope": [
                        "entity.name.type.class.python"
                    ],
                    "settings": {
                        "foreground": "#4CAEE2"
                    }
                },
                {
                    "scope": [
                        "variable.parameter.function.language.special.self.python"
                    ],
                    "settings": {
                        "foreground": "#79B8FF",
                    }
                }
            ]
        },
    },
    // The Settings of Base Editor
    "editor.fontSize": 15,
    "editor.fontFamily": "Fira Code,Inconsolata,Consolas, 'Courier New', monospace, 方正仿宋_GBK",
    "editor.fontLigatures": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "markdown.styles": [
        // "file:///Users/you-name/Documents/vscode-markdown.css"
    ],
    "git.ignoreLimitWarning": true,
    "python.analysis.completeFunctionParens": true
}
